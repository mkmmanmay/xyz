			<parameter name="paymentMethod" value="CREDIT_CARD"/>
				<methods>
					<include name="verifyPayForFeaturingPageTest" />
					<include name="verifyPaymentMethodTest" />
					<include name="selectAgreeToPayCheckboxTest" />
					<include name="clickToPayTest" />
